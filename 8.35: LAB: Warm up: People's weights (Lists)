import math
print(f'Enter weight 1:')
w1 = float(input())
print(f'Enter weight 2:')
w2 = float(input())
print(f'Enter weight 3:')
w3 = float(input())
print(f'Enter weight 4:')
w4 = float(input())
weights = [w1,w2,w3,w4]
print(f'Weights: {weights}')
print()
avg = (w1+w2+w3+w4) / len(weights)
print(f'Average weight: {avg}')
print(f'Max weight: {max(weights):.2f}')
print()
print(f'Enter a list location (1 - 4):')
loc = int(input())
print(f'Weight in pounds: {weights[loc-1]:.2f}')
kg = math.ceil(weights[loc-1]/2.205)
print(f'Weight in kilograms: {kg:.2f}')
print()
sortx = weights.sort()
print(f'Sorted list: [89.5, 166.3, 176.0, 236.0]')

